{
    "name": "netv",
    "private": true,
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.14.0",
        "eslint-config-alloy": "^3.7.2",
        "lerna": "^4.0.0",
        "ts-loader": "^7.0.4",
        "typescript": "^3.9.3",
        "webpack": "^4.43.0",
        "webpack-bundle-analyzer": "^3.8.0",
        "webpack-cli": "^3.3.12",
        "webpack-merge": "^5.7.3"
    },
    "scripts": {
        "build:core": "cd ./packages/core && npm run build",
        "build:netv": "cd ./packages/netv && npm run build",
        "build:layout": "cd ./packages/layout && npm run build",
        "build:netv:benchmarks": "cd ./packages/netv && npm run build:benchmarks",
        "build": "lerna run build",
        "watch:core": "cd ./packages/core && npm run watch",
        "watch:netv": "cd ./packages/netv && npm run watch",
        "watch:layout": "cd ./packages/layout && npm run watch",
        "watch:netv:benchmarks": "cd ./packages/netv && npm run watch:benchmarks",
        "watch": "lerna run watch --parallel",
        "bootstrap": "npm install && lerna bootstrap",
        "lint:core": "cd ./packages/core && npm run lint",
        "lint:layout": "cd ./packages/layout && npm run lint",
        "lint:netv": "cd ./packages/netv && npm run lint",
        "lint:all": "npm run lint:core && npm run lint:layout && npm run lint:netv"
    }
}
